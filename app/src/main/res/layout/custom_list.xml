<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/txTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Juli 2023"
                android:textColor="@color/purple_500"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/txJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14.5sp"
                android:layout_below="@+id/txTanggal" />

            <TextView
                android:id="@+id/txDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:text="Deskripsi"
                android:textColor="@color/black"
                android:textSize="14.5sp"
                android:layout_below="@+id/txJudul" />

            <TextView
                android:id="@+id/btEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:layout_below="@id/txDeskripsi"
                android:layout_toLeftOf="@id/btHapus"/>

            <TextView
                android:id="@+id/btHapus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:layout_below="@id/txDeskripsi"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>